# Working
for_window [window_role="pop-up"] floating enable
for_window [window_type="popup-menu"] floating toggle
for_window [window_type="tooltip"] floating toggle
for_window [class="Pavucontrol"] floating toggle
for_window [class="Nm-connection-editor"] floating toggle
for_window [class="Blueberry.py"] floating toggle
for_window [class="blueberry.py"] floating toggle
for_window [window_role="Devtools"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="Lxappearance"] floating toggle
for_window [class="Pcmanfm"] floating toggle
for_window [class="Pcmanfm" id="Choose Application"] floating toggle
for_window [class="Nitrogen"] floating toggle
for_window [title="Preferences"] floating toggle

for_window [floating] resize set 640 480
for_window [title="nitrogen"] resize set 640 480

for_window [class="Spotify"] move to workspace 9
assign [class="GitKraken"] $ws8

###############
# Color Theme #
###############
# Colors Definition
set_from_resource $bg        i3wm.bg          #282828
set_from_resource $bg-darker i3wm.bg-darker   #1d2021
set_from_resource $fg-lighter i3wm.fg-lighter #fbf1c7
set_from_resource $fg        i3wm.fg          #ebdbb2
set_from_resource $red       i3wm.red       #cc241d
set_from_resource $green     i3wm.green     #98971a
set_from_resource $yellow    i3wm.yellow    #d79921
set_from_resource $blue      i3wm.blue      #458588
set_from_resource $purple    i3wm.purple    #b16286
set_from_resource $aqua      i3wm.aqua      #689d68
set_from_resource $gray      i3wm.gray      #a89984
set_from_resource $orange    i3wm.orange    #d65d0e

# class                 border backgr. text       indic.  child_border
client.focused          $fg    $bg     $fg        $bg     $orange
client.focused_inactive $green $fg     $bg        $purple $bg
client.unfocused        $fg   $gray   $bg-darker $fg     $bg
client.urgent           $red   $red    $bg        $red    $red

#######
# Bar #
#######
exec_always --no-startup-id ~/git/dotfiles/config/config/polybar/polybar-launch.sh
