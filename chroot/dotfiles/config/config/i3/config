###########
# General #
###########
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders smart
font xft:Hack 8

force_display_urgency_hint 500 ms
focus_on_window_activation urgent
# Mod is Win Key
set $mod Mod4
floating_modifier $mod

#####################
# Start Up Programs #
#####################
exec --no-startup-id dropbox
exec --no-startup-id redshift-gtk
exec --no-startup-id nitrogen --restore
exec --no-startup-id nm-applet
exec --no-startup-id /usr/lib/xfce-polkit/xfce-polkit
exec --no-startup-id ~/.screenlayout/vga-left.sh
#exec --no-startup-id pcmanfm -d
exec --no-startup-id blueman-applet

############
# Key Maps #
############
# My Maps
bindsym $mod+Return exec xfce4-terminal
bindsym $mod+d exec rofi -show
#bindsym $mod+d dmenu
bindsym $mod+Shift+n exec dm-tool lock
bindsym $mod+Shift+m exec dm-tool lock & systemctl suspend
bindsym $mod+p exec xfce4-screenshooter -r
bindsym $mod+shift+p exec xfce4-screenshooter -w

# Multimedia maps
bindsym $mod+Shift+minus exec light -U 5; exec notify-send -a "Backlight" "Brightness Down: `light`"
bindsym $mod+Shift+equal exec light -A 5; exec notify-send -a "Backlight" "Brightness Up: `light`"

bindsym $mod+Shift+i exec pactl set-sink-volume @DEFAULT_SINK@ +5%; exec notify-send -a "Volume" "Volume Up"
bindsym $mod+Shift+k exec pactl set-sink-volume @DEFAULT_SINK@ -5%; exec notify-send -a "Volume" "Volume Down"
bindsym $mod+m exec pactl set-sink-mute @DEFAULT_SINK@ toggle; exec notify-send -a "Volume" "Muted"

bindsym $mod+space exec playerctl play-pause; exec notify-send -a "Music" "Music Play/Pause"
bindsym $mod+Shift+l exec playerctl next; exec notify-send -a "Muusic" "Next Music"
bindsym $mod+Shift+j exec playerctl previous; exec notify-send -a "Music" "Previous Music"

# Rename Workspace
#bindsym $/od+r exec i3-input -F 'rename workspace to "%s"' -P 'New name: '

# Scratchpad
bindsym $mod+Shift+c move scratchpad
bindsym $mod+c scratchpad show

# i3 maps
bindsym $mod+Alt+r reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+Shift+q kill

bindsym $mod+Shift+g sticky toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking; exec notify-send 'Layout Stacking'
bindsym $mod+w layout tabbed; exec notify-send 'Layout Tabbed'
bindsym $mod+e layout toggle split; exec notify-send 'Layout Split'

bindsym $mod+h split h; exec notify-send 'Split Horizontal'
bindsym $mod+v split v; exec notify-send 'Split Vertical'

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right

bindsym $mod+Shift+a move left
bindsym $mod+Shift+s move down
bindsym $mod+Shift+w move up
bindsym $mod+Shift+d move right

#move workspace to output left
#move workspace to output right

##############
# Workspaces #
##############
focus_follows_mouse on

set $ws0 0
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+shift+8 move container to workspace number $ws8
bindsym $mod+shift+9 move container to workspace number $ws9
bindsym $mod+shift+0 move container to workspace number $ws10

